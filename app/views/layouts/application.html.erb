<!DOCTYPE html>

<html>
	<head>
  		<title><%= full_title(yield(:title)) %></title>

  		<meta name="viewport" content="width=device-width, initial-scale=1">

  	  	<%= stylesheet_link_tag "application" %>

  	  	<%= stylesheet_link_tag 'mobile' if mobile_device? %>

  	  	<%= javascript_include_tag "application" %>
  	  	
  	  	<script src="//maps.google.com/maps/api/js?v=3.14&amp;sensor=false&amp;libraries=geometry" type="text/javascript">
  	  	</script>

		<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.1.2/src/markerclusterer_packed.js" type="text/javascript">
		</script>


 	  	<%= csrf_meta_tags %>

  	  	<%= render 'layouts/shim' %>

	</head>


	<body style="position:absolute; width:100%; height:100%;">
		
		<div style="text-shadow:none;font-size:13px;" data-role="page" id="gmaps">

		<div data-role="header">
		<%= render 'layouts/header' %>
		
		<br>
		<br>
		</div>
		
		<div class="container">
		
			<% flash.each do |key, value| %>

        		<%= content_tag(:div, value, 
        			class: "alert alert-#{key}", style: "margin-top:25px") %>
        			
        </div>
	
			<%end%>
				
				<% if signed_in? %>
					<% if !driver? %>
				
						<div style="margin-left:90px;margin-top:15px;position:absolute;width:240px;
									background: rgba(172,228,252,.75); box-shadow: 10px 10px 5px #434343;z-index:1;"> 
				
					<div style="margin:10px 10px 10px 10px">
						<h3>Deliveries:</h3>
						

        			<%= render 'shared/stats' %>
        			
        			
        			 <li class="dropdown">
           				 <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             				 <h4 style="color:black;">Post Delivery:</h4>
           				 </a>
				            <ul class="dropdown-menu" style="margin-top:10px;width:350px;background: rgba(172,228,252,.75);box-shadow: 10px 10px 5px #434343">
				              <br><li style="margin:10px 10px 10px 10px"><%= render 'shared/order_form'%></li>
				            </ul>
			         </li>
					</div>
        			</div>
        			</div>
        			
        			<% else %>
        			
        			
<script type="text/javascript">

   $(document).ready(function(){ navigator.geolocation.getCurrentPosition(

        function(pos){
          $("#latitude").val(pos.coords.latitude);
          $("#longitude").val(pos.coords.longitude);

                           
  });
 });   

</script>

        			
        				<div style="margin-left:90px;margin-top:15px;position:absolute;width:240px;
									background: rgba(172,228,252,.9); box-shadow: 10px 10px 5px #888888;z-index:1;"> 
				
					<div style="margin:10px 10px 10px 10px">
						<h4 class="span2">Deliveries:</h4>
        				
        				

       <%= form_for Location.new do |f| %>

        
          <%= f.hidden_field :lat, :id => "latitude" %>
       
          <%= f.hidden_field :lng, :id => "longitude" %>

          <%= f.submit "Locate", 
                class: "btn btn-info btn-small", style: "margin-top:5px", :id => "autolocate" %>
                    
        <% end %>

     
        			<%= render 'shared/stats' %>
        			
        			
        		
    
      			</div>
      			</div>
      					<%end%>
      				<%end%>
      				
      		
      					<%= yield %>
      					
      					

	<div date-role="footer">
		<%= render 'layouts/footer' %>
	</div>
	
		<%= debug(params) if Rails.env.development? %>

	</div>
	
	</body>
	
</html>